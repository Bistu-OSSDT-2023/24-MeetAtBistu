<!--pages/myactivity/myactivity.wxml-->
<view class="cu-bar bg-black search">
				<view class="cu-avatar round" style="background-image:url({{UserInfo.userPhoto}});"></view>
				<view class="content">
					Kindred Spirit - 我的
				</view>
</view>

<view  class="cu-card case {{isCard?'no-card':''}}" wx:for="{{activities}}">
  <view style="margin:10px 12px 0 12px" class="cu-item shadow">
    <view class="image">
      <image src="{{item.photo}}" mode="widthFix"></image>
      <view class="cu-tag bg-blue">{{item.type}}</view>
      <view class="cu-bar bg-shadeBottom">
        <text class="text-cut">{{item.content}}</text>
      </view>
    </view>

    <view class="cu-list menu-avatar">
      <view class="cu-item">
        <view class="cu-avatar round lg" style="background-image:url({{item.photo}})"></view>
        <view class="content flex-sub">
          <view class="text-grey">{{item.nickName}}</view>
          <view class="text-gray text-sm flex justify-between">
            {{item.startTime}}
            <view class="text-blue text-lg">
              <text class="cuIcon-friend margin-lr-xs"></text> {{item.join}}
              <!-- <text class="cuIcon-appreciatefill margin-lr-xs"></text> 20
              <text class="cuIcon-messagefill margin-lr-xs"></text> 30 -->
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  
</view>

<view style="height: 3rem;"></view>