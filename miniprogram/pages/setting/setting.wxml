<!--pages/setting/setting.wxml-->
<view class="cu-bar bg-black search">
				<view class="cu-avatar round" style="background-image:url({{userinfo.avatarUrl}});"></view>
				<view class="content">
					{{userinfo.nickName}}
				</view>
</view>
<view style="padding-top:5px">
  <van-image
    round
  width="10rem"
  height="10rem"
    class="userImage"
  src="{{userinfo.avatarUrl}}"
/>
</view>

<van-cell-group>
  <van-field
    value="{{cloudUserInfo.xm}}"
    label="姓名"
    size="large"
    left-icon="star"
    
    disabled="{{disabled}}"
    input-align="right"
    border="{{ false }}"
  />
</van-cell-group>
<van-cell-group>
  <van-field
    value="{{cloudUserInfo.nj}}"
    label="年级"
    size="large"
    left-icon="star"
    
    disabled="{{disabled}}"
    input-align="right"
    border="{{ false }}"
  />
</van-cell-group>
<van-cell-group>
  <van-field
    value="{{cloudUserInfo.xh}}"
    label="学号"
    disabled="{{disabled}}"
    size="large"
    left-icon="contact"
    
    input-align="right"
    border="{{ false }}"
  />
</van-cell-group>
<van-cell-group>
  <van-field
    value="{{cloudUserInfo.zy}}"
    label="专业"
    size="large"
    disabled="{{disabled}}"
    input-align="right"
    left-icon="contact"
    
    border="{{ false }}"
  />
</van-cell-group>
<van-cell-group>
  <van-field
    label="性别"
    size="large"
    input-align="right"
    disabled="{{disabled}}"
    value="{{cloudUserInfo.gender=='1'?'女':'男'}}"
    left-icon="contact"
    
    border="{{ false }}"
  />
</van-cell-group>

<van-cell-group>
  <van-field
    label="年龄"
    input-align="right"
    value="{{cloudUserInfo.nl}}"
    disabled="{{disabled}}"
    left-icon="contact"
    size="large"
    
    border="{{ false }}"
  />
</van-cell-group>


<view>
  <van-cell-group>
  <van-field
    value="{{ cloudUserInfo.zwms }}"
    label="自我描述"
    type="textarea"
    disabled="{{disabled}}"
    autosize
    border="{{ false }}"
  />
</van-cell-group>
</view>

<view class="padding flex flex-direction">
  <button class="cu-btn bg-cyan lg" bindtap="modifyBtn">{{msg}}</button>
  <button class="cu-btn bg-red margin-tb-sm lg" disabled="{{disabled==false?false:true}}" bindtap="cancelBtn">取消</button>
</view>

<view style="height: 3rem;"></view>
