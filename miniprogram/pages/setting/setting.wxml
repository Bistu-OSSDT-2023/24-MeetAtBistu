<!--pages/setting/setting.wxml-->
<view class="cu-bar bg-black search">
				<view class="cu-avatar round" ></view>
				<view class="content">
					{{userinfo.nickName}}
				</view>
</view>
<view style="padding-top:5px">
  <van-image
    round
  width="10rem"
  height="10rem"
  class="userImage"
  src="{{userinfo.avatarUrl}}"
/>
</view>

<van-cell-group>
  <van-cell
    value="{{nj}}"
    label="年级"
    size="large"
    bind:change="onChange"
    left-icon="star"
    id="nj"
    disabled="{{disabled}}"
    input-align="right"
    bind:focus="showBottom"
    border="{{ false }}"
  />
  <van-popup show="{{njbottom}}" position="bottom" :overlay="true" round >
  <van-picker
    show-toolbar
    id="njpopup"
    title="年级"
    columns="{{ grades }}"
    bind:confirm="onConfirm"
    bind:cancel="onCancel"
  />
</van-popup>

</van-cell-group>
<van-cell-group>
  <van-field
    value="{{xh}}"
    label="学号"
    disabled="{{disabled}}"
    size="large"
    bind:change="onChange"
    left-icon="contact"
    id="xh"
    input-align="right"
    border="{{ false }}"
  />
</van-cell-group>
<van-cell-group>
  <van-field
    value="{{lxfs}}"
    label="联系方式"
    disabled="{{disabled}}"
    size="large"
    bind:change="onChange"
    left-icon="contact"
    id="lxfs"
    input-align="right"
    border="{{ false }}"
  />
</van-cell-group>
<van-cell-group>
  <van-field
    value="{{xy}}"
    label="学院"
    disabled="{{disabled}}"
    size="large"
    bind:change="onChange"
    left-icon="contact"
    id="xy"
    input-align="right"
    border="{{ false }}"
  />
</van-cell-group>

<van-cell-group>
  <van-field
    value="{{zy}}"
    label="专业"
    size="large"
    disabled="{{disabled}}"
    input-align="right"
    bind:change="onChange"
    left-icon="contact"
    id="zy"
    border="{{ false }}"
  />
</van-cell-group>
<van-cell-group>
  <van-field
    label="性别"
    size="large"
    input-align="right"
    disabled
    value="{{userinfo.gender==1?'男':'女'}}"
    left-icon="contact"
    id="xb"
    bind:change="onChange"
    border="{{ false }}"
  />
</van-cell-group>

<van-cell-group>
  <van-field
    label="年龄"
    input-align="right"
    value="{{nl}}"
    disabled="{{disabled}}"
    left-icon="contact"
    bind:change="onChange"
    size="large"
    id="nl"
    border="{{ false }}"
  />
</van-cell-group>


<view>
  <van-cell-group>
  <van-field
    value="{{ zwms }}"
    label="自我描述"
    bind:change="onChange"
    type="textarea"
    id="zwms"
    disabled="{{disabled}}"
    autosize
    border="{{ false }}"
  />
</van-cell-group>
</view>

<view class="padding flex flex-direction">
  <button class="cu-btn bg-cyan lg" bindtap="modifyBtn">{{msg}}</button>
  <button class="cu-btn bg-red margin-tb-sm lg" disabled="{{disabled==false?false:true}}" bindtap="cancelBtn">取消</button>
</view>
<van-toast id="van-toast" />
<view style="height: 3rem;"></view>
