
<view class="cu-bar bg-black search">
				<view class="cu-avatar round" style="background-image:url({{UserInfo.userPhoto}});"></view>
				<view class="content">
					Kindred Spirit - {{cur_act}}
				</view>
</view>

<view  class="cu-card case {{isCard?'no-card':''}}" wx:for="{{activities}}" wx:key="index">
  <view style="margin:10px 12px 0 12px" class="cu-item shadow">
    <view class="image">
      <image id="{{item.id}}" bindtap="toDetail" src="{{item.photo}}" mode="widthFix" style="height:125px"></image>
      <view class="cu-tag bg-blue">{{item.type}}</view>
      <view class="cu-bar bg-shadeBottom">
        <text class="text-cut">{{item.content}}</text>
      </view>
    </view>

    <view class="cu-list menu-avatar">
      <view class="cu-item">
        <view class="cu-avatar round lg" style="background-image:url({{item.photo}})"></view>
        <view class="content flex-sub">
          <view class="text-grey">{{item.nickName}}</view>
          <view class="text-gray text-sm flex justify-between">
            {{item.startTime}} 
            
            <view class="text-blue text-lg">
              <text class="cuIcon-friend margin-lr-xs"></text> {{item.join}}
              <!-- <text class="cuIcon-appreciatefill margin-lr-xs"></text> 20
              <text class="cuIcon-messagefill margin-lr-xs"></text> 30 -->
            </view>
          </view>
        </view>
      </view>
      <view class="flex" style="flex;flex-direction:row-reverse" >
          <van-button bindtap="quit" size="small" icon="minus" disabled type="warn">退出</van-button>
          <van-button bindtap="join"  size="small" icon="plus" type="primary">加入</van-button>
      </view>
    </view>
  </view>
  
</view>

<view style="height: 3rem;"></view>